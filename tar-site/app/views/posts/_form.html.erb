<div class="new-edit-post-main">
  
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:" %>
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :title, placeholder: "title", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :sub_title, placeholder: "sub title", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :img_path, placeholder: "main image path (relative)", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.text_field :tags, placeholder: "tag(s)", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.cktext_area :body, placeholder: "body", as: :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control editor1" %>
    </div>

    <div class="form-group">
      <%= f.button :submit %>
    </div>
  <% end %>

</div>